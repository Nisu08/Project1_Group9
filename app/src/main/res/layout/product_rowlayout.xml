<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:outlineSpotShadowColor="@color/coffee"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_stroke"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/imgPdt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher_background"

                />
            <TextView
                android:id="@+id/namePdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imgPdt"
                />
            <TextView
                android:id="@+id/soldby"
                android:text="Sold By: "
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgPdt"
                android:layout_below="@id/namePdt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manuPdt"
                android:layout_toRightOf="@id/soldby"
                android:textColor="@color/black"
                android:text="Manufacturer"
                android:layout_below="@id/namePdt"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dollar"
                android:layout_below="@id/manuPdt"
                android:layout_toRightOf="@id/imgPdt"
                android:textColor="@color/black"
                android:text="$"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pricePdt"
                android:layout_below="@id/manuPdt"
                android:layout_toRightOf="@id/dollar"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:text="00.00"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:id="@+id/descPdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_below="@id/dollar"
                android:layout_toRightOf="@id/imgPdt"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>